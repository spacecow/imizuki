<%= semantic_form_for @event, :html => {:multipart => true} do |f| %>
  <%= f.input :title %>
  <% @event.pictures.each_with_index do |pic,i| %>
    <%= f.inputs :for => [:pictures,pic], :class => :image do |f2| %>
      <%= render "events/picture_fields", :f => f, :f2 => f2, :i => i %>
    <% end %>
  <% end %>
  <%= submit f,@event %>
<% end %>
