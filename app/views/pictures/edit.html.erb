<%= semantic_form_for @picture.event do |f| %>
  <%= f.input :main_picture_no, :as => :radio, :collection => [['Main Picture',@picture.event.pictures.index(@picture)]] %>
    <%= f.inputs :for => [:pictures,@picture] do |f2| %>
      <%= f2.input :image %>
      <%= image_tag @picture.image.url(:thumb) %>
      <%= f2.input :caption %>
    <% end %>
  <%= f.submit jt(:cancel), :name => :cancel %>
  <%= f.submit update(:picture) %>
<% end %>
